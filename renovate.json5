{
  $schema: 'https://docs.renovatebot.com/renovate-schema.json',
  extends: [
    'config:recommended',
  ],
  baseBranches: [
    'dev',
  ],
  dependencyDashboardTitle: 'Renovate Dashboard ðŸ¤–',
  packageRules: [
    {
      description: 'Auto merge Github Actions',
      matchFileNames: [
        '.github/workflows/**',
      ],
      matchUpdateTypes: [
        'minor',
        'patch',
      ],
      automerge: true,
    },
    {
      description: 'Parse Dockerfile versioning',
      matchFileNames: [
        'Dockerfile',
      ],
      versioning: 'docker',
    },
  ],
}
